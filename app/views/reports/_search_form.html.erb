<div><h4>销售管理</h4></div>
<div class="well well-lg">
  <%= form_for :report, url: reports_path, method: :get, html: {id: 'search-form'}, remote: true do |f| %>
    <div class="row">
      <input type="hidden" class="form-control" name="search" value="<%= params[:search].presence || true %>" placeholder="品名">
      <div class="form-group col-md-4 col-lg-4">
        <label for="report_name">品名</label>
        <%= f.select :name, Report.names, {prompt: '请选择'}, {class: 'form-control'} %>
      </div>
      <div class="form-group col-md-4 col-lg-4">
        <label for="size" class="">规格</label>
        <%= f.select :size, Report.sizes, {prompt: '请选择'}, class: 'form-control'  %>
      </div>
      <div class="form-group col-md-4 col-lg-4">
        <label for="company" class="">厂家</label>
        <%= f.select :company, Report.companies, {prompt: '请选择'}, class: 'form-control'  %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4 col-lg-4">
        <label for="sell_date" class="">开始时间</label>
        <input type="text" class="form-control datepicker" name="start_date" value="<%= params[:start_date] %>" placeholder="开始日期">
      </div>
      <div class="form-group col-md-4 col-lg-4">
        <label for="sell_date" class="">结束时间</label>
        <input type="text" class="form-control datepicker" name="end_date" value="<%= params[:end_date] %>" placeholder="结束日期">
      </div>
      <div class="form-group col-md-4 col-lg-4">
        <label for="target_company" class="">往来单位名称</label>
        <%= f.select :target_company, Report.target_companies, {prompt: '请选择'}, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 col-lg-2 pull-left">
        <%= f.submit '搜索', class: 'btn btn-info btn-block', id: 'search' %>
      </div>
      <div class="col-md-6 col-lg-6">
      </div>
      <div class="col-md-2 col-lg-2">
        <%= link_to '下载', download_reports_path, class: 'btn btn-info btn-block', id: 'download', target: '_blank' %>
      </div>
    </div>
  <% end %>
</div>
